{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "paths": {
            "@": ["./src"],
            "@base": ["./"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
